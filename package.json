{
    "name": "devenv",
    "version": "0.0.0",
    "license": "MIT",
    "bin": "dist/cli.js",
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "prebuild": "rm -rf dist",
        "build": "tsc",
        "postbuild": "chmod +x dist/cli.js && npm link",
        "dev": "tsc --watch",
        "test": "prettier --check . && xo && ava"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@google-cloud/cloudbuild": "^4.6.0",
        "@types/ink-table": "^1.0.7",
        "ink": "^4.1.0",
        "ink-table": "^3.1.0",
        "jsonc-parser": "^3.3.1",
        "pastel": "^2.0.0",
        "react": "^18.2.0",
        "table": "^6.8.2",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^3.0.1",
        "@types/react": "^18.0.32",
        "@vdemedes/prettier-config": "^2.0.1",
        "ava": "^5.2.0",
        "chalk": "^5.3.0",
        "eslint-config-xo-react": "^0.27.0",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "ink-testing-library": "^3.0.0",
        "prettier": "^2.8.7",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.3",
        "xo": "^0.54.2"
    },
    "ava": {
        "extensions": {
            "ts": "module",
            "tsx": "module"
        },
        "nodeArguments": [
            "--loader=ts-node/esm"
        ]
    },
    "xo": {
        "extends": "xo-react",
        "prettier": true,
        "rules": {
            "react/prop-types": "off"
        }
    },
    "prettier": "@vdemedes/prettier-config"
}
